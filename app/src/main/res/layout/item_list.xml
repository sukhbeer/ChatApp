<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUser"
        android:layout_width="@dimen/seven_five_dp"
        android:layout_height="@dimen/seven_five_dp"
        android:padding="@dimen/five_dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/txtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/imgUser"
        android:text="@string/username"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/imgUser" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/fifteen_dp"
        android:layout_height="@dimen/fifteen_dp"
        app:civ_border_color="#05df29"
        app:civ_border_width="@dimen/ten_dp"
        android:visibility="gone"
        android:id="@+id/userStatus"
        android:layout_below="@id/txtUser"
        android:layout_marginStart="@dimen/minus_fourteen_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_toEndOf="@id/imgUser"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="@dimen/minus_fourteen_dp"
        android:layout_toRightOf="@id/imgUser" />

</RelativeLayout>